<h2>Book List</h2>

<% if @books.blank? %>
<p>Sorry, we don't have any book right now.</p>
<% else %>
<p>The list of books we have at this moment:</p>

<ul id = "books">
	<% @books.each do |c| %>
	<li>
		<%= link_to c.title, {:action => "show", :id => c.id} -%>
		&nbsp; &nbsp;
	   	<b> <%= link_to 'Edit', {:action => "edit", :id => c.id} %></b>
	   	<b> <%= link_to "Delete", {:action => 'delete', :id => c.id}, 
	   	:confirm => "Are you sure you want to delete this item?" %></b>
	</li>
	<% end %>
</ul>

<% end %>

<p id = "new_book"><%= link_to "Add new Book", {:action => 'new' }%></p>

