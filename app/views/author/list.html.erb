<% if @authors.blank? %>
<p>There are not any authors currently in the system.</p>
<% else %>
<p>These are the current authors in our system</p>

<ul id = "authors">
	<% @authors.each do |c| %>
	<li>
		<%= link_to c.name, {:action => "show", :id => c.id} -%>
	   	<b> <%= link_to 'Edit', {:action => "edit", :id => c.id} %></b>
	   	<b> <%= link_to "Delete", {:action => 'delete', :id => c.id}, 
	   	:confirm => "Are you sure you want to delete this item?" %></b>
	</li>
	<% end %>
</ul>

<% end %>

<p><%= link_to "Add new Author", {:action => 'new' }%></p>